@page
@model CovidClassroom.ClassRoomManagerModel
@{
    ViewData["Title"] = "ClassRoomManager";
}

<div class="text-center">
    <h1>Your Classes</h1>
</div>
@if (Model.isTeacher)
{
    <div class="text-center">
        <h4 class="text-muted">Create new curriculum for your students:</h4>
    </div>
    <div>
        @for (int i = 0; i <= Model.classes.getAllByTeacher(Model.currentUser).Count(); i += 3)
        {
            <div class="card-group">
                @for (int f = 0; f < 3; f++)
                {
                    @if (!(i + f >= Model.classes.getAllByTeacher(Model.currentUser).Count()))
                    {
                        <div class="card border-success mb-3" style="width: 24rem">
                            <div class="card-body">
                                <h5 class="card-title">@Model.classes.getAllByTeacher(Model.currentUser)[i + f].className</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@Model.classes.getAllByTeacher(Model.currentUser)[i + f].classroomId</h6>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">@Model.classes.getAllByTeacher(Model.currentUser)[i + f].students.Count() Students enrolled</li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        break;
                    }
                }
            </div>
        }
        <a asp-page="CreateClass" class="btn btn-outline-success" style="position:absolute;left:10%;bottom:10%;">Add A Classroom</a>
    </div>

}
else if (!Model.isTeacher)
{
<div>
    @for (int i = 0; i <= Model.classes.getAllByStudent(Model.currentUser).Count(); i += 3)
    {
        <div class="card-group">
            @for (int f = 0; f < 3; f++)
            {
                @if (!(i + f >= Model.classes.getAllByStudent(Model.currentUser).Count()))
                {
                    <div class="card border-success mb-3" style="width: 24rem">
                        <div class="card-body">
                            <h5 class="card-title">@Model.classes.getAllByStudent(Model.currentUser)[i + f].className</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@Model.classes.getAllByStudent(Model.currentUser)[i + f].classroomId</h6>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">@Model.classes.getAllByStudent(Model.currentUser)[i + f].students.Count() Students enrolled</li>
                                <li class="list-group-item">
                                    <a asp-page="Classroom" asp-route-classId="@Model.classes.getAllByStudent(Model.currentUser)[i + f].classroomId" class="btn btn-outline-success btn-group-sm">Enter class</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    break;
                }
            }
        </div>
    }
</div>
}
